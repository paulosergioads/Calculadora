<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="CLCULADORA"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtNum1"
        android:layout_width="209dp"
        android:layout_height="52dp"
        android:layout_marginTop="88dp"
        android:background="#4CAF50"
        android:ems="10"
        android:hint="DIGITE NUMERO1"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/edtNum2"
        android:layout_width="210dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:background="#4CAE50"
        android:ems="10"
        android:hint="DIGITI NUMERO 2"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNum1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnResult"
        style="@style/Botoes"

        android:text="="
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNum2"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/result"
        android:layout_width="63dp"
        android:layout_height="21dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnResult" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="79dp"
        android:layout_height="17dp"
        android:layout_marginTop="24dp"
        android:background="#4CAE50"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Total Soma"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.331"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnResult" />
</androidx.constraintlayout.widget.ConstraintLayout>